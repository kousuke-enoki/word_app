# ビルド用のステージ
FROM golang:1.23 AS builder

# 作業ディレクトリを設定
WORKDIR /app

# Goのモジュールをコピー
COPY go.mod go.sum ./
RUN go mod download

# アプリケーションのソースコードをコピー
COPY . .

# アプリケーションをビルド
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o main .

# 実行用の軽量イメージを使用
FROM alpine:latest

# 依存関係をコピー
WORKDIR /app
COPY --from=builder /app/main /app/main

# バックエンドのポートを設定
EXPOSE 8080

# アプリケーションを実行
CMD ["./main"]